# Trading System v2 Environment Configuration
# Copy this file to .env and fill in your actual API keys and settings
# Do NOT commit your .env. This file only contains placeholders.

# =============================================================================
# AI/LLM Configuration (REQUIRED)
# =============================================================================

# OpenAI API Key (required for CrewAI agents)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Alternative LLM providers (optional)
# ANTHROPIC_API_KEY=your-anthropic-api-key
# GOOGLE_API_KEY=your-google-api-key
# AZURE_OPENAI_API_KEY=your-azure-openai-key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# =============================================================================
# Market Data Sources
# =============================================================================

# Polygon.io (Professional market data)
POLYGON_API_KEY=your-polygon-api-key-here

# Financial Modeling Prep (Fundamental data)
FMP_API_KEY=your-fmp-api-key-here

# Alpha Vantage (Alternative market data)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key-here

# Quandl/Nasdaq Data Link
QUANDL_API_KEY=your-quandl-api-key-here

# FRED (Federal Reserve Economic Data)
FRED_API_KEY=your-fred-api-key-here

# =============================================================================
# Cryptocurrency Data Sources
# =============================================================================

# Binance API (Crypto trading and data)
BINANCE_API_KEY=your-binance-api-key-here
BINANCE_SECRET_KEY=your-binance-secret-key-here

# Coinbase Pro API (Crypto trading and data)
COINBASE_API_KEY=your-coinbase-api-key-here
COINBASE_SECRET_KEY=your-coinbase-secret-key-here
COINBASE_PASSPHRASE=your-coinbase-passphrase-here

# CoinGecko API (Free crypto data)
COINGECKO_API_KEY=your-coingecko-api-key-here

# CryptoCompare API (Crypto data and news)
CRYPTOCOMPARE_API_KEY=your-cryptocompare-api-key-here

# =============================================================================
# Forex Data Sources
# =============================================================================

# OANDA API (Forex trading and data)
OANDA_API_KEY=your-oanda-api-key-here
OANDA_ACCOUNT_ID=your-oanda-account-id-here

# FXCM API (Forex trading)
# FXCM_API_KEY=your-fxcm-api-key-here
# FXCM_ACCESS_TOKEN=your-fxcm-access-token-here

# XE Currency API (Exchange rates)
# XE_API_KEY=your-xe-api-key-here

# Currencylayer API (Exchange rates)
# CURRENCYLAYER_API_KEY=your-currencylayer-api-key-here

# =============================================================================
# News and Sentiment Data
# =============================================================================

# News API
NEWS_API_KEY=your-news-api-key-here

# Benzinga News API
BENZINGA_API_KEY=your-benzinga-api-key-here

# Twitter API (optional)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Reddit API (optional)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=TradingSystemV2/1.0

# =============================================================================
# Brokerage APIs
# =============================================================================

# Alpaca Trading API
ALPACA_API_KEY=your-alpaca-api-key-here
ALPACA_SECRET_KEY=your-alpaca-secret-key-here

# Trading Environment (paper or live)
TRADING_MODE=paper

# Alpaca Base URLs
# Paper trading (safe for testing)
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# Live trading (use with extreme caution)
# ALPACA_BASE_URL=https://api.alpaca.markets
# ALPACA_DATA_URL=https://data.alpaca.markets

# Interactive Brokers (optional)
# IB_HOST=127.0.0.1
# IB_PORT=7497
# IB_CLIENT_ID=1

# TD Ameritrade (optional)
# TD_AMERITRADE_API_KEY=your-td-api-key
# TD_AMERITRADE_REDIRECT_URI=https://localhost:8080

# =============================================================================
# Database Configuration
# =============================================================================

# Primary database (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///data/trading_data.db
# DATABASE_URL=postgresql://user:password@localhost:5432/trading_system

# Redis for caching and real-time data
REDIS_URL=redis://localhost:6379/0
# REDIS_URL=redis://user:password@localhost:6379/0

# InfluxDB for time-series data (optional)
# INFLUXDB_URL=http://localhost:8086
# INFLUXDB_TOKEN=your-influxdb-token
# INFLUXDB_ORG=your-org
# INFLUXDB_BUCKET=trading-data

# =============================================================================
# System Configuration
# =============================================================================

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading_system.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Application settings
APP_NAME=TradingSystemV2
APP_VERSION=2.0.0
APP_ENVIRONMENT=development

# Security
SECRET_KEY=your-secret-key-for-encryption
JWT_SECRET_KEY=your-jwt-secret-key
ENCRYPTION_KEY=your-32-byte-encryption-key

# =============================================================================
# Trading Configuration
# =============================================================================

# Risk Management
MAX_PORTFOLIO_RISK=0.02  # 2% max portfolio risk per trade
MAX_POSITION_SIZE=0.10   # 10% max position size
MAX_SECTOR_CONCENTRATION=0.25  # 25% max sector concentration
STOP_LOSS_PERCENTAGE=0.05      # 5% stop loss

# Trading Hours (UTC)
MARKET_OPEN_TIME=14:30
MARKET_CLOSE_TIME=21:00
PRE_MARKET_START=09:00
AFTER_HOURS_END=01:00

# 24/7 Trading Configuration
CRYPTO_TRADING_24_7=true
FOREX_TRADING_24_5=true
INTERNATIONAL_MARKETS=true

# Crypto Trading Settings
CRYPTO_MIN_ORDER_SIZE=10  # USD
CRYPTO_MAX_POSITION_SIZE=0.05  # 5% of portfolio
CRYPTO_STOP_LOSS=0.10  # 10% stop loss for crypto

# Forex Trading Settings
FOREX_MIN_ORDER_SIZE=1000  # USD
FOREX_MAX_LEVERAGE=10  # 10:1 leverage
FOREX_STOP_LOSS=0.02  # 2% stop loss for forex
FOREX_TAKE_PROFIT=0.04  # 4% take profit

# Portfolio Settings
INITIAL_CAPITAL=100000
MIN_CASH_BALANCE=10000
REBALANCE_FREQUENCY=weekly  # daily, weekly, monthly

# =============================================================================
